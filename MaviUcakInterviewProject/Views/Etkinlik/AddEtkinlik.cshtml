@{
}


@model ErrorMsgModel;
@if (!string.IsNullOrEmpty(Model.Msg))
{
    <h3 style="color:red">@Model.Msg</h3>
}
<form action="@Url.Action("AddEtkinlik","Etkinlik")" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label>Başlık</label>
        <input type="text" name="baslik" class="form-control" placeholder="Başlık">
    </div>
    </br>
    <div class="form-group">
    <label>Yer</label>
    <input type="text" name="yer" class="form-control" placeholder="Yer">
    </div>
    </br>
    <div class="form-group">
    <label for="zaman">Zaman</label>
        <input type="datetime-local" id="zaman" name="zaman">
    </div>
    </br>
    <div class="form-group">
    <label>Ücretli Ücretsiz</label><br>
        <input type="radio" name="ucretliUcretsiz" id="ucretliRadio" value="true" checked> Ücretli
        <input type="radio" name="ucretliUcretsiz" id="ucretsizRadio" value="false"> Ücretsiz
    </div>
    </br>
    <div class="form-group" id="ucretDiv">
        <label>Ücret</label>
        <input type="number" name="ucret" class="form-control" placeholder="Ücret" min="0" step="0.01">
    </div>
    </br>
    <div class="form-group">
        <label>Aciklama</label>
        <div>
            <textarea id="aciklama" name="aciklama" class="form-control"></textarea>
        </div>
    </div>
    </br>
  <div class="form-group">
    <label>Görsel</label>
    <input type="file" name="icon" class="form-control">
  </div>
  <Br/>
  <button type="submit" class="btn btn-primary">Etkinlik Ekle</button>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea#description'
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {

            // "Ücretli" seçeneği seçildiğinde "Ücret" inputunu göster
            $("#ucretliRadio").change(function () {
                if ($(this).is(":checked")) {
                    $("#ucretDiv").show();
                }
            });

            // "Ücretsiz" seçeneği seçildiğinde "Ücret" inputunu gizle
            $("#ucretsizRadio").change(function () {
                if ($(this).is(":checked")) {
                    $("#ucretDiv").hide();
                }
            });
        });
    </script>

}